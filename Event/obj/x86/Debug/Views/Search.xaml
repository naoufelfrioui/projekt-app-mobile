<Page x:ConnectionId='1' x:Class="Event.Views.Search"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:Behaviors="using:Template10.Behaviors"
      xmlns:Core="using:Microsoft.Xaml.Interactions.Core"
      xmlns:Interactivity="using:Microsoft.Xaml.Interactivity"
      xmlns:controls="using:Template10.Controls"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:Event.Views"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:vm="using:Event.ViewModels"
      xmlns:data="using:Event.Models"
      x:Name="ThisPage"
      mc:Ignorable="d">

    <Page.DataContext>
        <vm:DetailPageViewModel x:ConnectionId='2' x:Name="ViewModel" />
    </Page.DataContext>

    <RelativePanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:ConnectionId='3' x:Name="AdaptiveVisualStateGroup">
                <VisualState x:ConnectionId='4' x:Name="VisualStateNarrow">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="{StaticResource NarrowMinWidth}" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <!--  TODO: change properties for narrow view  -->
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:ConnectionId='5' x:Name="VisualStateNormal">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="{StaticResource NormalMinWidth}" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <!--  TODO: change properties for normal view  -->
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:ConnectionId='6' x:Name="VisualStateWide">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="{StaticResource WideMinWidth}" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <!--  TODO: change properties for wide view  -->
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <!--  header  -->
        <controls:PageHeader x:ConnectionId='7' x:Name="pageHeader"
                                                   
                             RelativePanel.AlignLeftWithPanel="True"
                             RelativePanel.AlignRightWithPanel="True"
                             RelativePanel.AlignTopWithPanel="True"
                             Text="" />

        <!--  content  -->

        <ScrollViewer 
                      Padding="12,8,0,0"
                      RelativePanel.AlignBottomWithPanel="True"
                      RelativePanel.AlignLeftWithPanel="True"
                      RelativePanel.AlignRightWithPanel="True"
                      RelativePanel.Below="pageHeader"
                      VerticalScrollBarVisibility="Auto">

            <Grid x:ConnectionId='8' x:Name="LayoutRoot">

                <StackPanel   Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,100,-8,570" Width="356">
                    <TextBox x:ConnectionId='19' x:Name="Searchtext"   Text="Musik"   Width="257"/>
                    <Button x:ConnectionId='20' Content="Start" x:Name="StartButton" Margin="5,0,0,0"                            Width="69" />
                </StackPanel>

                <StackPanel x:ConnectionId='9' x:Name="wait" Margin="53,0,92,627">
                    <Border BorderThickness="5"  Height="77" >
                        <StackPanel  >
                            <TextBlock HorizontalAlignment="Center" 
                         Margin="10" Text="Waiting Please ...." FontWeight="Bold" Foreground="#FFDE1212"   />
                            <ProgressBar x:ConnectionId='18' x:Name="pg2" Margin="10" Height="16"  IsIndeterminate="True"   />
                        </StackPanel>
                    </Border>
                </StackPanel>
                <StackPanel   VerticalAlignment="Center" Height="429" Margin="30,170,15,105" >
                    <GridView x:ConnectionId='10' Name="dataItem"   HorizontalAlignment="Center"                                IsItemClickEnabled="True"   Margin="0,0,83,0" Height="409" >
                        <GridView.ItemTemplate>
                            <DataTemplate                               >
                                <StackPanel x:ConnectionId='12'  VerticalAlignment="Center" Width="350" Height="150">
                                    <TextBlock x:ConnectionId='13'  Name="titre"                              />
                                    <TextBlock x:ConnectionId='14'                                 VerticalAlignment="Center"/>
                                    <TextBlock x:ConnectionId='15'                              VerticalAlignment="Center" />
                                    <TextBlock x:ConnectionId='16'                                 VerticalAlignment="Center" />
                                    <TextBlock x:ConnectionId='17'                              VerticalAlignment="Center"/>

                                </StackPanel>
                            </DataTemplate>
                        </GridView.ItemTemplate>
                    </GridView>
                    <TextBlock x:ConnectionId='11' Width="350"   x:Name="result"  HorizontalAlignment="Center"/>

                </StackPanel>
            </Grid>
        </ScrollViewer>


    </RelativePanel>
</Page>


